
@model WebCommercial.Models.Metier.Commande

@{
    ViewBag.Title = "Détails";
    Layout = Layout = "~/Views/Shared/_LayoutCommercial.cshtml";

}

<h2>Détails de la commande N°@Html.DisplayFor(model => model.NuComm)</h2>

@if (Model != null)
{
<div class="container">
    <div>
        <p>
            <strong>Commande N°@Html.DisplayFor(model => model.NuComm)</strong>
        </p>
    </div>
    <div>
        <p>
            <strong>Passée le :</strong> @Html.DisplayFor(model => model.DateComm)
        </p>
    </div>
    <div>
        <p>
            <strong>Montant total :</strong> @Html.DisplayFor(model => model.TotalCost) €
        </p>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">N° article</th>
                <th scope="col">Libellé</th>
                <th scope="col">Prix unitaire (€)</th>
                <th scope="col">Quantité commandée</th>
                <th scope="col">Montant total (€)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var article in Model.ListArticles)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => article.NuArticle)</td>
                    <td>@Html.DisplayFor(modelItem => article.LibArticle)</td>
                    <td>@Html.DisplayFor(modelItem => article.PrixArticle)</td>
                    <td>@Html.DisplayFor(modelItem => article.QteComm)</td>
                    <td>@Html.DisplayFor(modelItem => article.TotalCost)</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="form-group">
        <div>
            @Html.ActionLink("Fermer", "Index", "Commande", new { @class = "btn btn-default btn-outline-secondary" })
        </div>
    </div>
</div>
}


