
@model IEnumerable<WebCommercial.Models.Metier.Article>

@{
    ViewBag.Title = "Modifier";
    Layout = Layout = "~/Views/Shared/_LayoutCommercial.cshtml";

}

<h2>Augmenter le prix</h2>

@if (Model != null)
{
    using (Html.BeginForm("Mult","Article"))
    {
        @Html.AntiForgeryToken()
        <div class="container  justify-content-center">
            <div class="row" style="margin-top : 3%;">
                <input type="radio" name="MultRadio" value="mult"  checked="checked"/>
                <label class="control-label">N° Article</label>
                <select name="NuArticle" id="NuArticle" class="selectpicker">
                    @{
                        int i = 0;
                        foreach (var article in Model)
                        {
                            if (i == 0)
                            {
                                <option selected="selected">@article.NuArticle</option>
                                i++;
                            }
                            else
                            {
                                <option>@article.NuArticle </option>
                            }
                        }

                    }
                </select>
                <input type="number" step=".1" name="MultV" id="MultV" style="width:80px;" />
            </div>
            <div class="row" style="margin-top: 3%;">
                <input type="radio" name="MultRadio" value="multAll" />
                <label class="control-label">Tous les articles :</label>
                <input type="number" step=".1" placeholder="coefficient" name="MultAllV" id="MultAllV" style="width:80px;"/>
            </div>
            <div class="form-group">
                <div style="margin-top:3%;">
                    <input type="submit"  placeholder="coefficient" value="Confirmer" class="btn btn-default btn-success" />
                    @Html.ActionLink("Fermer", "Index", "Article", new { @class = "btn btn-default btn-outline-secondary" })
                </div>
            </div>
        </div>
    }

 }
